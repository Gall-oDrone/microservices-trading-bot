    "version": "0.2.0",
    "configurations": [   
        {
            "name": "Docker: Attach to Consumer Logger",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app/main",
            "port": 4000,
            "host": "127.0.0.1",
            "preLaunchTask": "order-consumer-docker-compose-up",
            "postDebugTask": "order-consumer-docker-compose-down",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Docker: Attach to Order Producer",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app/main",
            "port": 8080,
            "host": "localhost",
            "preLaunchTask": "order-producer-docker-compose-up",
            "postDebugTask": "order-producer-docker-compose-down",
            "showLog": true,
            "trace": "verbose"
        }  
    ]
}